if(NOT EXISTS ${CMAKE_SOURCE_DIR}/include/RadiPako.hpp OR NOT EXISTS ${CMAKE_SOURCE_DIR}/src/RadiPako.cpp)
    set(MyURL "https://github.com/malysonb/RadiPako/releases/download/v2.0.0.1/RPK_Lib_2.0.0.1_src.zip")
    set(Download_Path ${CMAKE_SOURCE_DIR}/ThirdParty/temp/RPK.zip)
    set(Extracted ${CMAKE_SOURCE_DIR})
    message(STATUS "Downloading RPK to " ${Download_Path})
    file(DOWNLOAD ${MyURL} ${Download_Path})
    message(STATUS "Extracting RPK to " ${Extracted})
    execute_process(COMMAND powershell Expand-Archive -Path ${Download_Path} -DestinationPath ${Extracted}/)
    message(STATUS "Deleting temporary files")
    execute_process(COMMAND rm -r ${CMAKE_SOURCE_DIR}/ThirdParty/temp)
    set(RPK_INCLUDE_DIRS ${CMAKE_SOURCE_DIR}/include/RadiPako.hpp)
else()
    message(STATUS "RPK IS READY!")
    set(RPK_INCLUDE_DIRS ${CMAKE_SOURCE_DIR}/include/RadiPako.hpp)
endif()