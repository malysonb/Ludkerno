if(WIN32)
    if (CMAKE_CXX_COMPILER_ID MATCHES MSVC)
        if(NOT EXISTS ${CMAKE_SOURCE_DIR}/ThirdParty/MSVC/lib/x86/SDL2_image.lib)
            set(MyURL "https://www.libsdl.org/projects/SDL_image/release/SDL2_image-devel-2.0.5-VC.zip")
            set(Download_Path ${CMAKE_SOURCE_DIR}/ThirdParty/temp/SDL2_image.zip)
            set(Extracted ${CMAKE_SOURCE_DIR}/ThirdParty/MSVC)
            message(STATUS "Downloading SDL2_image to " ${Download_Path})
            file(DOWNLOAD ${MyURL} ${Download_Path})
            message(STATUS "Extracting SDL2_image to " ${Extracted})
            execute_process(COMMAND mkdir ${Extracted})
            execute_process(COMMAND powershell Expand-Archive -Path ${Download_Path} -DestinationPath ${CMAKE_SOURCE_DIR}/ThirdParty/temp/)
            execute_process(COMMAND cp -r ${CMAKE_SOURCE_DIR}/ThirdParty/temp/SDL2_image-2.0.5/* ${Extracted}/)
            execute_process(COMMAND rm -r ${CMAKE_SOURCE_DIR}/ThirdParty/temp)
        endif()
        set(SDL2_image_INCLUDE_DIRS ${PREFIX}/MSVC/include)
        set(SDL2_image_LIBRARIES ${PREFIX}/MSVC/lib/x86/SDL2_image.lib)
    elseif (CMAKE_CXX_COMPILER_ID MATCHES GNU)
        if(NOT EXISTS ${CMAKE_SOURCE_DIR}/ThirdParty/x86/lib/libSDL2_image.a)
            set(MyURL "https://www.libsdl.org/projects/SDL_image/release/SDL2_image-devel-2.0.5-mingw.tar.gz")
            set(Download_Path ${CMAKE_SOURCE_DIR}/ThirdParty/temp/SDL2_image.tar.gz)
            set(Extracted ${CMAKE_SOURCE_DIR}/ThirdParty/x86/)
            message(STATUS "Downloading SDL2_image to " ${Download_Path})
            file(DOWNLOAD ${MyURL} ${Download_Path})
            message(STATUS "Extracting SDL2_image to " ${Extracted})
            execute_process(COMMAND mkdir ${Extracted})
            execute_process(COMMAND tar xvzf ${Download_Path} -C ${CMAKE_SOURCE_DIR}/ThirdParty/temp/)
            execute_process(COMMAND cp -r ${CMAKE_SOURCE_DIR}/ThirdParty/temp/SDL2_image-2.0.5/i686-w64-mingw32/* ${Extracted}/)
            execute_process(COMMAND rm -r ${CMAKE_SOURCE_DIR}/ThirdParty/temp)
        endif()
        set(SDL2_image_INCLUDE_DIRS ${PREFIX}/x86/include/SDL2)
        set(SDL2_image_LIBRARIES ${PREFIX}/x86/lib/libSDL2_image.a)
    endif()  
endif()